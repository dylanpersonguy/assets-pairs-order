{
  "name": "@decentralchain/assets-pairs-order",
  "version": "5.0.0",
  "description": "Utility for determining the correct ordering of asset pairs on the DecentralChain DEX",
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "files": [
    "src/",
    "dist/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "license": "MIT",
  "author": "Decentral-America <https://github.com/Decentral-America>",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Decentral-America/assets-pairs-order.git"
  },
  "homepage": "https://github.com/Decentral-America/assets-pairs-order#readme",
  "bugs": {
    "url": "https://github.com/Decentral-America/assets-pairs-order/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Decentral-America"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@11.9.0",
  "keywords": [
    "decentralchain",
    "dcc",
    "dex",
    "assets",
    "pairs",
    "order",
    "trading",
    "blockchain",
    "cryptocurrency"
  ],
  "scripts": {
    "build:browser": "rollup -c rollup.config.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:publint": "publint",
    "check:exports": "attw --pack . --ignore-rules cjs-resolves-to-esm",
    "check:size": "size-limit",
    "validate": "npm run format:check && npm run lint && npm run typecheck && npm run test && npm run build:browser && npm run check:publint && npm run check:exports && npm run check:size",
    "bulletproof": "npm run format && npm run lint:fix && npm run typecheck && npm run test",
    "bulletproof:check": "npm run format:check && npm run lint && npm run typecheck && npm run test",
    "prepublishOnly": "npm run validate",
    "prepack": "npm run build:browser",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/browser.js",
      "limit": "5 kB"
    }
  ],
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@eslint/js": "^10.0.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-small-lib": "12.0.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "publint": "0.3.17",
    "rollup": "^4.59.0",
    "size-limit": "12.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "bs58": "^6.0.0"
  }
}
