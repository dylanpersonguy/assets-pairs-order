{
  "name": "@decentralchain/assets-pairs-order",
  "version": "5.0.0",
  "description": "Utility for determining the correct ordering of asset pairs on the DecentralChain DEX",
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "files": [
    "src/",
    "dist/"
  ],
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Decentral-America/assets-pairs-order.git"
  },
  "homepage": "https://github.com/Decentral-America/assets-pairs-order#readme",
  "bugs": {
    "url": "https://github.com/Decentral-America/assets-pairs-order/issues"
  },
  "engines": {
    "node": ">=24"
  },
  "keywords": [
    "decentralchain",
    "dcc",
    "dex",
    "assets",
    "pairs",
    "order",
    "trading"
  ],
  "scripts": {
    "build:browser": "rollup -c rollup.config.js",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "format": "prettier --write \"src/**/*.{js,json}\" \"*.{js,mjs,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\" \"*.{js,mjs,json}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "bulletproof": "npm run format && npm run lint:fix && npm run typecheck && npm run test",
    "bulletproof:check": "npm run format:check && npm run lint && npm run typecheck && npm run test",
    "prepublishOnly": "npm run bulletproof:check && npm run build:browser",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rollup": "^4.59.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bs58": "^6.0.0"
  }
}
